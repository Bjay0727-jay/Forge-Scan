{
  "name": "forgescan-api",
  "version": "0.1.0",
  "description": "ForgeScan API - Cloudflare Worker",
  "main": "src/index.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/worker.js --format=esm --platform=browser --target=es2022 --main-fields=module,main",
    "dev": "wrangler dev",
    "deploy": "npm run build && wrangler deploy",
    "deploy:prod": "npm run build && wrangler deploy --env production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "tail": "wrangler tail"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "pdf-lib": "^1.17.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18",
    "wrangler": "^4.0.0"
  }
}
